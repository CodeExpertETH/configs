{
  "name": "root",
  "author": {
    "name": "Code_Expert_Team",
    "url": "https://github.com/CodeExpertETH/configs"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/config-lerna-scopes": "^13.2.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "lerna": "^6.4.0",
    "lint-staged": "^11.2.6",
    "prettier": "^2.8.2",
    "syncpack": "^5.8.15"
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "root": true
  },
  "homepage": "https://github.com/CodeExpertETH/configs",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md}": "prettier --write",
    "package.json": "syncpack format"
  },
  "repository": "https://github.com/CodeExpertETH/configs.git",
  "scripts": {
    "lint": "eslint packages",
    "release": "yarn lint && lerna publish"
  },
  "workspaces": [
    "packages/*"
  ]
}
