{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "extends": "./base.json"
}
