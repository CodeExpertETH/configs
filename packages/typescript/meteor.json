{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020","dom", "dom.iterable"],
    "noEmit": true,
    "paths": {
      "meteor/*": [
        "node_modules/@types/meteor/*",
        ".meteor/local/types/packages.d.ts"
      ],
      "/*": ["*"]
    },
    "jsx": "react"
  },
  "exclude": ["node_modules", ".meteor"]
}
